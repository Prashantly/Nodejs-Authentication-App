<link rel="stylesheet" href="/css/resetPass.css" />

<% if (locals.user) { %>
<section
  class="d-flex align-items-center justify-content-center"
  style="background-color: transparent"
>
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <!-- card -->
        <div
          class="card shadow-2-strong"
          style="
            border-radius: 1rem;
            background-color: rgba(255, 255, 255, 0.7);
          "
        >
          <div class="card-body p-5 text-center" style="color: #05085ae6">
            <h2 class="fw-bold mb-2 text-capitalize">Hello <%= user.name%></h2>
            <p class="text-dark-50 my-4 fw-bold">
              Please enter your Old and new password for reset
            </p>

            <!-- form -->
            <form action="/users/<%=user.id%>/reset" method="POST">
              <div class="field-holder mb-4">
                <input
                  type="password"
                  id="current_password"
                  name="current_password"
                  required
                  class="form-control"
                />
                <label for="current_password">Current Password</label>
              </div>

              <div class="field-holder mb-4">
                <input
                  type="password"
                  id="new_password"
                  name="new_password"
                  required
                  class="form-control"
                />
                <label for="new_password">New Password</label>
              </div>

              <div class="field-holder mb-4">
                <input
                  type="password"
                  id="confirm_new_password"
                  name="confirm_new_password"
                  required
                  class="form-control"
                />
                <label for="confirm_new_password">Confirm New Password</label>
              </div>

              <button
                class="btn btn-dark btn-lg btn-block reset-btn fw-50"
                type="submit"
              >
                Reset
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% } %>
