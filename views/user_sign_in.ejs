<link rel="stylesheet" href="/css/signUp.css" />

<section
  class="d-flex align-items-center justify-content-center"
  style="background-color: transparent"
>
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <!-- card -->
        <div
          class="card shadow-2-strong"
          style="
            border-radius: 1rem;
            background-color: rgba(255, 255, 255, 0.4);
          "
        >
          <div class="card-body p-5 text-center">
            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
            <p class="text-dark-50 mb-5 fw-bold">
              Please enter your E-mail and password!
            </p>

            <!-- form -->
            <form action="/users/create-session" method="POST">
              <div class="field-holder mb-4">
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="form-control"
                />
                <label for="email">Email</label>
              </div>
              <div class="field-holder mb-4">
                <input
                  type="password"
                  id="password"
                  name="password"
                  required
                  class="form-control"
                />
                <label for="password">Password</label>
              </div>

              <p class="small mb-3 pb-lg-2">
                <a
                  class="text-primary-50 fs-5 fw-bold"
                  href="#"
                  data-bs-toggle="modal"
                  data-bs-target="#forgotPasswordModal"
                  >Forgot password?</a
                >
              </p>

              <button class="btn btn-dark btn-lg btn-block lgn" type="submit">
                Login
              </button>
            </form>
            <hr class="my-3" />

            <a
              class="btn btn-lg btn-block google"
              href="/users/auth/google"
              type="submit"
            >
              <i class="fab fa-google"></i> Sign in with Google
            </a>

            <div class="my-4 fs-5">
              <p>
                Don't have an account?
                <a
                  href="/users/sign-up"
                  class="fw-bold"
                  style="color: blue; text-decoration: underline"
                  >Sign Up</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div
  class="modal fade"
  id="forgotPasswordModal"
  tabindex="-1"
  aria-labelledby="forgotPasswordModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title fw-bold" id="forgotPasswordModalLabel">
          Forgot Password
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body d-flex flex-column">
        <p class="mb-3">
          Please enter your valid email address. You will receive a link to
          create a new password via email.
        </p>
        <div class="my-3">
          <form
            action="/users/forget-password"
            method="POST"
            id="forgotPasswordForm"
          >
            <label for="email12" class="mb-2"
              >Email Address<span style="color: red">*</span></label
            >
            <input
              type="email"
              name="email"
              id="email12"
              class="form-control"
              placeholder="Email"
              required
            />
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-primary"
          id="submitForgotPasswordBtn"
        >
          Get New Password
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document
    .getElementById("submitForgotPasswordBtn")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("forgotPasswordForm").submit();
    });
</script>
